{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "go@1.23.3",
    "skaffold@2.13.2",
    "ruff@0.9.3",
    "golangci-lint@latest",
    "husky@8.0.3",
    "kubectl@1.34.1",
    "minikube@latest",
    "kubernetes-helm@latest",
    "kubectx@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!'"
    ],
    "scripts": {
      "install-hooks": [
        "husky install && husky add .husky/pre-commit 'make pre-commit' && husky add .husky/pre-push 'make pre-push'"
      ],
      "pre-commit": [
        "make pre-commit"
      ],
      "local-debug": [
        "make local-debug"
      ],
      "run": [
        "make run"
      ]
    }
  }
}