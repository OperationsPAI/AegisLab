{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "go@1.23.3",
    "skaffold@2.13.2",
    "ruff@0.9.3",
    "golangci-lint@latest",
    "kubectl@1.34.1",
    "minikube@latest",
    "kubernetes-helm@latest",
    "kubectx@latest",
    "git-cliff@latest",
    "lefthook@2.0.12"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!'",
      "lefthook install"
    ],
    "scripts": {
      "install-hooks": [
        "lefthook install"
      ],
      "pre-commit": [
        "make pre-commit"
      ],
      "local-debug": [
        "make local-debug"
      ],
      "run": [
        "make run"
      ]
    }
  }
}